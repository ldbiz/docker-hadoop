<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>
<property>
  <name>hadoop.tmp.dir</name>
  <value>/var/lib/hadoop-0.20/cache/${user.name}</value>
  <description>A base for other temporary directories.</description>
</property>

<property>
  <name>fs.default.name</name>
  <value>hdfs://namenode:54310</value>
</property>
<property>
  <name>topology.script.file.name</name>
  <value>/etc/hadoop/conf/ip2rack.sh</value>
</property>
<property>
  <name>topology.script.number.args</name>
  <value>1</value>
</property>
<property>
    <name>hadoop.proxyuser.tomcat.hosts</name>
    <value>*</value>
</property>
<property>
    <name>hadoop.proxyuser.tomcat.groups</name>
    <value>*</value>
</property>
<property>
    <name>hadoop.proxyuser.access.hosts</name>
    <value>*</value>
</property>
<property>
    <name>hadoop.proxyuser.access.users</name>
    <value>access</value>
</property>
<property>
    <name>hadoop.proxyuser.ingest.hosts</name>
    <value>*</value>
</property>
<property>
    <name>hadoop.proxyuser.ingest.users</name>
    <value>ingest</value>
</property>

</configuration>
